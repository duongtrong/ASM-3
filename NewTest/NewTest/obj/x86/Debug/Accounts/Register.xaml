<Page
    x:Class="NewTest.Accounts.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewTest.Accounts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <ScrollViewer.Background>
            <ImageBrush ImageSource="/Assets/3338562_volume_up-wallpaper-1920x1080.jpg"/>
        </ScrollViewer.Background>
        <StackPanel x:ConnectionId='2' x:Name="ParentStackPanel" Height="1530" Margin="0,0,0,0">
            <TextBlock Text="Register" HorizontalAlignment="Center" FontSize="40" TextWrapping="Wrap"/>
            <TextBox x:ConnectionId='3' x:Name="Email" Margin="0, 30, 0, 0" Header="Email" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBlock x:ConnectionId='4' x:Name="Email_Message" RelativePanel.Below="Email" HorizontalAlignment="Center"/>
            <PasswordBox x:ConnectionId='5' x:Name="Password" Margin="0, 30, 0, 0" Header="Password" Width="500" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock x:ConnectionId='6' x:Name="Password_Message" RelativePanel.Below="Password" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='7' x:Name="FirstName" Margin="0, 30, 0, 0" Header="First Name" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBlock x:ConnectionId='8' x:Name="First_Message" RelativePanel.Below="FirstName" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='9' x:Name="LastName" Margin="0, 30, 0, 0" Header="Last Name" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBlock x:ConnectionId='10' x:Name="Last_Message" RelativePanel.Below="LastName" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='11' x:Name="ImageUrl" Margin="0, 30, 0, 0" Header="Avatar Url" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>

            <Image x:ConnectionId='12' x:Name="MyAvatar" Width="150" Height="150" Margin="0,30,0,0"/>

            <RelativePanel HorizontalAlignment="Center">
                <Button x:ConnectionId='26' Content="Capture Your Photo" Margin="-50,20,0,0" VerticalAlignment="Top"                      />
                <Button x:ConnectionId='27' Content="Select Your Photo" Margin="150,20,0,0" VerticalAlignment="Top"                      />
            </RelativePanel>
            <TextBox x:ConnectionId='13' x:Name="Phone" Margin="0, 30, 0, 0" Header="Phone Number" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBlock x:ConnectionId='14' x:Name="Phone_Message" RelativePanel.Below="Phone" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='15' AcceptsReturn="True" x:Name="Address" Margin="0, 30, 0, 0" Header="Address" HorizontalAlignment="Center" VerticalAlignment="Top" Width="500" Height="100"/>
            <TextBlock x:ConnectionId='16' x:Name="Address_Message" RelativePanel.Below="Address" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='17' AcceptsReturn="True" x:Name="Introduction" Margin="0, 30, 0, 0" Header="Introduction" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="500" Height="100"/>
            <TextBlock x:ConnectionId='18' x:Name="Introduction_Message" RelativePanel.Below="Introduction" HorizontalAlignment="Center"/>
            <TextBlock Text="Gender" Margin="0, 30, 0, 0" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <RadioButton x:ConnectionId='23' Content="Male" Tag="1"                        />
                <RadioButton x:ConnectionId='24' Content="Female" Tag="0"                        />
                <RadioButton x:ConnectionId='25' Content="Other" Tag="2"                         IsChecked="True"/>
            </StackPanel>
            <CalendarDatePicker x:ConnectionId='19' x:Name="BirthDay" Header="Birthday" Margin="0, 30, 0, 0" Width="500"                               HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='20' x:Name="BtnSignup" Margin="0, 30, 0, 0" Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Top"                      />
                <Button x:ConnectionId='21' x:Name="BtnLogin" Margin="20, 30, 0, 0" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top"                       />
                <Button x:ConnectionId='22' x:Name="BtnReset" Margin="20, 30, 0, 0" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Top"                       />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

