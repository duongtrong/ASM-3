<Page
    x:Class="NewTest.View.SongForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewTest.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <ScrollViewer.Background>
            <ImageBrush ImageSource="/Assets/3338562_volume_up-wallpaper-1920x1080.jpg"/>
        </ScrollViewer.Background>
        <StackPanel x:ConnectionId='2' Margin="30, 0, 0, 0" x:Name="ParentStackPanel">
            <TextBlock Text="Add Song" HorizontalAlignment="Center" Foreground="White" FontSize="50"/>
            <TextBox x:ConnectionId='3' x:Name="Name" Margin="0, 30, 0, 0" Header="Name" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBox x:ConnectionId='4' AcceptsReturn="True" x:Name="Description" Margin="0, 30, 0, 0" Header="Description" HorizontalAlignment="Center" VerticalAlignment="Top" Width="500" Height="100"/>
            <TextBox x:ConnectionId='5' x:Name="Singer" Margin="0, 30, 0, 0" Header="Singer" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBox x:ConnectionId='6' x:Name="Author" Margin="0, 30, 0, 0" Header="Author" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBox x:ConnectionId='7' x:Name="Link" Margin="0, 30, 0, 0" Header="Link" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <TextBox x:ConnectionId='8' x:Name="Thumbnail" Margin="0, 30, 0, 0" Header="Thumbnail" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='9' x:Name="BtnSignup" Margin="0, 30, 0, 0" Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Center"                          />
                <Button x:ConnectionId='10' x:Name="BtnReset" Margin="40, 30, 0, 0" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

